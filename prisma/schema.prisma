generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id           Int           @id @default(autoincrement())
  status       Boolean       @default(false)
  title        String
  description  String
  grouped      Boolean       @default(false)
  EventGroup   EventGroup[]
  eventPeoples EventPeople[]
}

model EventGroup {
  id          Int           @id @default(autoincrement())
  id_event    Int
  name        String
  event       Event        @relation(fields: [id_event], references: [id])
  EventPeople EventPeople[]
}

model EventPeople {
  id       Int         @id @default(autoincrement())
  id_event Int
  id_group Int
  name     String
  cpf      String
  matched  String     @default("")
  event    Event?      @relation(fields: [id_event], references: [id], map: "id_event_fk")
  group    EventGroup? @relation(fields: [id_event], references: [id], map: "id_eventPeople_fk")
}
